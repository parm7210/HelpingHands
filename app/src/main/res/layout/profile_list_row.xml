<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutProfileListRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="50dp">


    <ImageView
        android:id="@+id/imageView1ID"
        android:layout_width="35dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/nameTextViewId"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="20sp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView1ID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/InfoTextViewid"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="20sp"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView1ID"
        app:layout_constraintTop_toBottomOf="@+id/nameTextViewId" />

</androidx.constraintlayout.widget.ConstraintLayout>