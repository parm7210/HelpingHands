                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/itemCity9"
                app:layout_constraintTop_toBottomOf="@+id/itemCity13" />

            <TextView
                android:id="@+id/itemCity11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile Page :"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/itemCity10"
                app:layout_constraintTop_toBottomOf="@+id/itemCity14" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="About"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Creators :  "
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView18"
