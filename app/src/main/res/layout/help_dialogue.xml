                android:text="Malay Patel"
                app:layout_constraintStart_toStartOf="@+id/itemCity3"
                app:layout_constraintTop_toBottomOf="@+id/itemCity3" />

            <TextView
                android:id="@+id/itemCity5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
