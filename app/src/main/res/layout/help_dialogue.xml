            <TextView
                android:id="@+id/itemCity7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Helping Hands, Version 1.1.0.0"
                app:layout_constraintStart_toStartOf="@+id/itemCity6"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/itemCity8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Home Page :"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/itemCity12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="30dp"
                android:text="You can call 911, text your emergency contacts or broadcast an emergency signal to nearby volunteers using the home page."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/itemCity8"
                app:layout_constraintTop_toBottomOf="@+id/itemCity8" />

            <TextView
                android:id="@+id/itemCity13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="All the nearby volunteers are displayed in this section. If you register as voulunteer, you can see the nearby emergency requests and also respond to them."
